before_script:
  # - curl -fsSL https://get.docker.com/ | sh
  - docker -v
  - docker ps
  - rapydo install auto

stages:
  - tests

script:
  stage: tests
  script:
    - APP_MODE=test rapydo init
    - rapydo remove
    - rapydo pull
    - rapydo update -i main --rebuild 
    - cp -r /arkimet/datasets/* data/arkimet/
    - rapydo start
    - export COMPOSE_INTERACTIVE_NO_CLI=1
    - rapydo shell --no-tty backend --command "restapi tests"
    - rapydo remove
